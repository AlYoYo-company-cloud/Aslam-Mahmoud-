  <script>
    const deck = document.getElementById("deck");
    const slides = [...deck.querySelectorAll("section.slide")];
    const nav = document.getElementById("nav");
    const progress = document.getElementById("progress");

    slides.forEach((slide,i)=>{
      const a=document.createElement("a");
      a.textContent=slide.querySelector("h2,h1")?.textContent || "غلاف";
      a.href="#";
      a.onclick=e=>{
        e.preventDefault();
        slide.scrollIntoView({behavior:"smooth"});
      };
      nav.appendChild(a);
    });

    deck.addEventListener("scroll",()=>{
      let ratio=deck.scrollTop/(deck.scrollHeight-window.innerHeight);
      progress.style.width=(ratio*100)+"%";
      slides.forEach((s,i)=>{
        const a=nav.children[i];
        let rect=s.getBoundingClientRect();
        if(rect.top<=window.innerHeight/2 && rect.bottom>=window.innerHeight/2){
          a.classList.add("active");
        }else a.classList.remove("active");
      });
    });
  </script>
